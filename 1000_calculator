    printf("한 자리씩 수 입력: \n");
    for(int i= 1000 -n; i <1000; i++){
        scanf("%d", &a);
        num1[i] = a;
    }
    printf("계산 방법\n 1. 덧셈 2.뺄셈 3.곱셈 4. 나눗셈 ");
    scanf("%d", &cal);
    
    
    switch(cal){
        case 1: 
        plus(num1, n);
        break;
        
        case 2:
        minus(num1, n);
        break;
        
        case 3:
        case 4:
        
        default:
        break;
    }
    
    }
int plus(int*num1, int N){
    int num2[1000] = {0};
    int a; //각 자릿수의 합
    int result[1001] = {0}; //결과값 배열 
    int n; //num2의자릿수
    int k;//계산결과 자릿수;
    
    printf("자릿수 입력: \n");
    scanf("%d", &n);
    printf("수 입력: \n");
    
    for(int i=1000-n; i < 1000 ; i++){
        scanf("%d", &a);
        num2[i] = a;
    }
    
    for(int i=999; i>= 0; i--){
        a = num1[i] + num2[i];
        result[i+1] =a%10;
        num1[i-1]+= a/10;
        
    }
    
    if(N>n){
        k =N;
    }
    else{
        k =n;
    }
    
    
    for(int i = 0 ; i<1001; i++){
        if(result[i]!=0){
        printf("%d", result[i]);
        }
    }
}

int minus(int*num1, int N){
    int num2[1000];
    int a;
    int result[1000];
    int n;
    
    printf("자릿수 입력: \n");
    scanf("%d", &n);
    printf("한자리씩 수 입력: \n");
    
    for(int i=1000- n; i < 1000; i++){
        scanf("%d", &a);
        num2[i] = a;
    }

    for(int i=999; i>= 0; i--){
        if(num1[i]<num2[i]){
            result[i] = num1[i]+10-num2[i];
            num1[i-1]-= 1;
        }
        else{result[i]=num1[i]-num2[i];}
    }
    
   for(int i = 0 ; i<1001; i++){
        if(result[i]!=0){
        printf("%d", result[i]);
        }
    }
}

