#include <stdio.h>
int plus(int * num1, int*num2 , int n1, int n2);
int minus(int * num1, int* num2, int n1, int n2); /* 개선: 음의 정수 */
int multiple(int * num1, int*num2, int n1, int n2);
int division(int *num1, int*num2, int n1, int n2);

int main(){
    int n1;
    int n2;
    int num1[1000]={0};
    int num2[1000] = {0};
    int cal;
    
    printf("자릿수 입력: \n");
    scanf("%d", &n1);
    printf("한 자리씩 수 입력: \n");
    for(int i= 1000-n1; i <1000; i++){
        scanf("%d", num1[i]);
    }
    
    printf("자릿수 입력: \n");
    scanf("%d", &n2);
    printf("한 자리씩 수 입력: \n");
    for(int i= 1000-n2; i <1000; i++){
        scanf("%d", num2[i]);
    }
    
    printf("계산 방법\n 1. 덧셈 2.뺄셈 3.곱셈 4. 나눗셈 ");
    scanf("%d", &cal);
    
    
    switch(cal){
        case 1: 
        plus(num1, num2, int n1, int n2);
        break;
        
        case 2:
        minus(num1, num2, int n1, int n2);
        break;
        
        case 3:
        multiple(num1, num2, int n1, int n2);
        case 4:
        
        default:
        break;
    }
    
    }
int plus(int*num1,int *num2, int N){
    int a; //각 자릿수의 합
    int result[1001] = {0}; //결과값 배열 
    int n; //num2의자릿수
    int k;//계산결과 자릿수;
    
    
    
    for(int i=999; i>= 0; i--){
        a = num1[i] + num2[i];
        result[i+1] =a%10;
        num1[i-1]+= a/10;
        
    }
    
    if(N>n){
        k =N;
    }
    else{
        k =n;
    }
    
    
    return result;
    }
}

int minus(int*num1, int N){
    int num2[1000] = {0};
    int a;
    int result[1000] ={0};
    int n;
    
    for(int i=1000- n; i < 1000; i++){
        scanf("%d", &a);
        num2[i] = a;
    }

    for(int i=999; i>= 0; i--){
        if(num1[i]<num2[i]){
            result[i] = num1[i]+10-num2[i];
            num1[i-1]-= 1;
        }
        else{result[i]=num1[i]-num2[i];}
    }
    
   for(int i = 0 ; i<1001; i++){
        if(result[i]!=0){
        printf("%d", result[i]);
        }
    }
}

int multiple(int * num1, int *num2, int n1, int n2){
    int result[1000000]={0};
    int num3[1000000] = {0};
    int num4[1000000]= {0};
    int i,j;
    int a;
    
    for(i=999; i>=0; i--){
        for(j=999; j>= 0; j--){
            a = num2[i]*num1[j];
            result[999999-i] += a%10;
            result[999998-i] +=a/10;
            
        }
    }
    
}
